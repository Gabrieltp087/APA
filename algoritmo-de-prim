#include "graph.h"

#define INFINITO 10000

void MSTPRIM(Graph G){
    vertex *PAI = malloc(G->V * sizeof(vertex *));
    for (vertex u = 0; u < G->V; u++)
        PAI[u] = -1;
    PAI[0] = 0;
    //PAI[r] = 0
    while(1){
        vertex pai, filho;
        int minimo = INFINITO;
        for (vertex v = 0; v<G->V; ++v){
            if (PAI[v] == -1) continue;
            for (link a = G->adj[v]; a!=NULL; a=a->next){
                if(PAI[a->w]==-1 && minimo>a->cst){
                    minimo = a->cst;
                    pai = v, filho = a->w;
                }
            }
            if (minimo == INFINITO) break;
            PAI[filho] = pai;
        }
    }
}
